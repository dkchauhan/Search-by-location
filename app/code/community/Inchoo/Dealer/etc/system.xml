<?xml version="1.0"?>

<config>
    <sections>
        <inchoo_dealer_config translate="label" module="inchoo_dealer">
            <label>Dealer</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <dealers_customer_group translate="label">
                    <label>Dealers Customer Group Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <default_dealers_customer_group translate="label" module="inchoo_dealer">
                            <label>Dealers Customer Group</label>
                            <frontend_type>select</frontend_type>
                            <source_model>inchoo_dealer/config_group_options</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_dealers_customer_group>
                    </fields>
                </dealers_customer_group>
                <search translate="label">
                    <label>Search Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                         <by_zip translate="label">
                            <label>By Zip</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </by_zip> 
                        <by_state translate="label">
                            <label>By State</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </by_state>
                        <by_company translate="label">
                            <label>By Company</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </by_company>
                        <radius_options translate="label" module="inchoo_dealer">
                            <label>Radius Options</label>
                            <comment>Comma-separated options like: 100,200,300</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </radius_options>
                        <default_radius_option translate="label" module="inchoo_dealer">
                            <label>Default Radius</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_radius_option>
                        <default_box_search_type translate="label" module="inchoo_dealer">
                            <label>Default Box Search Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>inchoo_dealer/config_searchtypes_options</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_box_search_type>
                    </fields>
                </search>
            </groups>
        </inchoo_dealer_config>
    </sections>
</config>